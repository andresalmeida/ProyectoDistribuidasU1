@model Proyecto.MVCPLS.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <style>
        /* Reset de estilos básicos */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: url('https://i.pinimg.com/originals/72/dc/33/72dc339da93a143ec1ed0d54143ecfea.jpg') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
            padding: 40px;
            animation: fadeIn 1.5s ease-in-out;
            transform: scale(1);
            transition: transform 0.3s ease;
        }

            .login-container:hover {
                transform: scale(1.05);
            }

            .login-container h2 {
                font-size: 26px;
                margin-bottom: 20px;
                text-align: center;
                color: #333;
                font-weight: bold;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                font-size: 14px;
                margin-bottom: 5px;
                display: block;
                color: #555;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 14px;
                transition: all 0.3s ease-in-out;
            }

                .form-group input:focus {
                    border-color: #ff6600;
                    box-shadow: 0 0 10px rgba(255, 102, 0, 0.5);
                    outline: none;
                }

        .remember-me {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .remember-me label {
                font-size: 14px;
                color: #555;
            }

            .remember-me a {
                font-size: 14px;
                color: #ff6600;
                text-decoration: none;
            }

                .remember-me a:hover {
                    text-decoration: underline;
                }

        .btn {
            width: 100%;
            padding: 12px;
            background-color: #ff6600;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn:hover {
                background-color: #e65a00;
                box-shadow: 0 10px 20px rgba(255, 102, 0, 0.4);
                transform: translateY(-2px);
            }

        .footer-text {
            margin-top: 20px;
            font-size: 14px;
            color: #555;
            text-align: center;
        }

            .footer-text a {
                color: #ff6600;
                text-decoration: none;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar Sesión</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">@ViewBag.ErrorMessage</div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Email">Correo Electrónico:</label>
                @Html.TextBoxFor(m => m.Email, new
                {
                    @class = "form-control",
                    placeholder = "Ingrese su correo",
                    @required = "required",
                    autocomplete = "off"
                })
            </div>
            <div class="form-group">
                <label for="Password">Contraseña:</label>
                @Html.PasswordFor(m => m.Password, new
                {
                    @class = "form-control",
                    placeholder = "Ingrese su contraseña",
                    @required = "required",
                    autocomplete = "off"
                })
            </div>

            <div class="remember-me">
                <label>
                    <input type="checkbox" /> Recordarme
                </label>
                <a href="@Url.Action("ForgotPassword", "UserAccount")">Olvidé mi contraseña</a>
            </div>

            <button type="submit" class="btn">Iniciar Sesión</button>
        }

        <div class="footer-text">
            ¿No tienes una cuenta? <a href="@Url.Action("AddUser", "UserAccount")">Regístrate</a>
        </div>
    </div>
</body>
</html>
