@model Entities.Category

@{
    ViewBag.Title = "Crear Categoría";
}

<div class="form-container">
    <h2>Crear Nueva Categoría</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <!-- Mostrar los errores de validación en un resumen -->
        @Html.ValidationSummary(true, "Por favor corrige los errores siguientes:", new { @class = "validation-summary" })

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(
                model => model.CategoryName,
                new
                     {
                    @class = "form-control minimal-input",
                    placeholder = "Ingrese el nombre de la categoría",
                    required = "required",
                    maxlength = "50"
                })
            <small class="form-hint">Este campo es obligatorio. Máximo 50 caracteres.</small>
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(
                model => model.Description,
                new
                     {
                    @class = "form-control minimal-input",
                    rows = 4,
                    placeholder = "Ingrese la descripción",
                    required = "required",
                    maxlength = "200"
                })
            <small class="form-hint">Este campo es obligatorio. Máximo 200 caracteres.</small>
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn minimal-btn">Crear</button>
            <a href="@Url.Action("List", "Category")" class="btn minimal-btn-cancel">Cancelar</a>
        </div>
    }
</div>

<style>
    /* Fondo y estilo general */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('https://i.pinimg.com/originals/72/dc/33/72dc339da93a143ec1ed0d54143ecfea.jpg') no-repeat center center/cover;
        color: #333;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 500px;
        animation: fadeIn 0.8s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    h2 {
        color: #ff6600;
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff6600;
            box-shadow: 0 0 8px rgba(255, 102, 0, 0.5);
            outline: none;
        }

    .form-hint {
        font-size: 12px;
        color: #999;
        margin-top: 5px;
    }

    .form-buttons {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 12px 20px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .minimal-btn {
        background-color: #ff6600;
        color: white;
        margin-right: 10px;
    }

        .minimal-btn:hover {
            background-color: #e65a00;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(255, 102, 0, 0.3);
        }

    .minimal-btn-cancel {
        background-color: #6c757d;
        color: white;
    }

        .minimal-btn-cancel:hover {
            background-color: #5a6268;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
        }

    .validation-summary {
        color: #dc3545;
        margin-bottom: 20px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
    }
</style>
