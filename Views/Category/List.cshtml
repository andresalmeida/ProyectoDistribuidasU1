@model List<Entities.Category>

@{
    ViewBag.Title = "Lista de Categorías";
}

<h2>Lista de Categorías</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="centered-message success">
        @ViewBag.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="centered-message error">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="content-wrapper">
        <ul>
            <li>
                <a href="@Url.Action("Index", "Category")" class="button-link">Buscar Productos por Categoría</a>
            </li>
            <li style="text-align: right;">
                <a href="@Url.Action("Create", "Category")" class="button-link create-btn">Crear Categoría</a>
            </li>
        </ul>
    </div>

    <table class="minimalist-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = category.CategoryID })" class="action-btn edit-btn">Editar</a>
                        |
                        <a href="@Url.Action("Delete", "Category", new { id = category.CategoryID })" class="action-btn delete-btn">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay categorías disponibles.</p>
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        color: #333;
    }

    .centered-message {
        text-align: center;
        padding: 10px;
        margin: 20px;
        border-radius: 4px;
    }

    .success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .content-wrapper {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        padding: 0 20px;
    }

    .button-link {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .button-link:hover {
            background-color: #0056b3;
        }

    .minimalist-table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .minimalist-table th, .minimalist-table td {
            padding: 10px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .minimalist-table th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

    .action-btn {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        transition: background-color 0.3s ease;
    }

    .edit-btn {
        background-color: #28a745;
        color: white;
    }

        .edit-btn:hover {
            background-color: #218838;
        }

    .delete-btn {
        background-color: #dc3545;
        color: white;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }
</style>
